<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_button</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
    </style>

    <style name="MyTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bg_title</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_text</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
        <item name="android:paddingTop">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
    </style>


    <style name="MyCardTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_card_text</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
    </style>

    <style name="MyCardSubTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_card_subtext</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
    </style>
</resources>
